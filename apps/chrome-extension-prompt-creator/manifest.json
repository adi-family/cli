{
  "manifest_version": 3,
  "name": "ADI Prompt Creator",
  "version": "1.0.0",
  "description": "Select a UI element, describe the change, and generate a context-rich prompt for a coding agent",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://api.anthropic.com/*"
  ],
  "action": {
    "default_title": "ADI Prompt Creator"
  },
  "web_accessible_resources": [
    {
      "resources": ["pageworld.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
