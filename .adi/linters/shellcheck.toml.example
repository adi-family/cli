# Example: ShellCheck external linter
# Rename to shellcheck.toml to enable
# Requires: shellcheck installed (brew install shellcheck)

[rule]
id = "shellcheck"
type = "exec"
category = "correctness"
severity = "warning"

[rule.exec]
command = "shellcheck -f json {file}"
output = "json"
timeout = 30

[rule.glob]
patterns = ["**/*.sh", "**/*.bash"]
